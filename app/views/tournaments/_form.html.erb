<%= form_for(@tournament) do |f| %>
    <% if @tournament.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@tournament.errors.count, "error") %> prohibited this tournament from being saved:</h2>

          <ul>
            <% @tournament.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :tournament_type %><br>
      <%= f.select :tournament_type, options_for_select(Tournament::TYPES) %>
    </div>
    <div class="field">
      <%= f.label :number_of_players %><br>
      <%= f.number_field :number_of_players %>
    </div>

    <%= f.fields_for :players do |p| %>
        <div class="field">
          <%= p.label :name %><br>
          <%= p.text_field :name %>
        </div>
        <div class="field">
          <%= p.label :team %><br>
          <%= p.text_field :team %>
        </div>
    <% end %>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

<div class="box">
  <div class="box-header">
    <h3 class="box-title">Matches</h3>
  </div>
  <!-- /.box-header -->
  <div class="box-body no-padding">
    <% @matches.each do |match| %>
        <div class="row match-row">
          <%= form_for match, :url => tournament_match_path(@tournament, match), :remote => true, :method => :put, :data => {:autosave => true} do |f| %>
              <span class="home"><%= match.home_team.name %></span>
              <span class="score">
              <%= f.text_field :home_team_score, :class => "score-field home" %>
                -
                <%= f.text_field :away_team_score, :class => "score-field away" %>
                </span>
              <span class="away"><%= match.away_team.name %></span>
              <span class="actions">
                <%= link_to '<i class="fa fa-fw fa-play"></i>'.html_safe, simulate_tournament_match_path(@tournament, match), :remote => true, :data => {:toggle => "tooltip", :placement => "right"}, :title => 'Simulate match' %>
              </span>
          <% end %>
        </div>

    <% end %>
  </div>
  <!-- /.box-body -->
</div>
<!-- /.box -->
<%#= link_to 'simulate', simulate_tournament_match_path(@tournament, match), :remote => true %>

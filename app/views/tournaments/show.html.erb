<h2>Matches</h2>
<hr>
<% @matches.in_groups_of(2, false) do |group| %>
    <div class="row">
      <% group.each do |match| %>
          <div class="col-md-6">
            <div class="panel panel-default matches-panel">
              <div class="panel-body">
                <%= form_for match, :url => tournament_match_path(@tournament, match), :remote => true, :method => :put, :data => {:autosave => true} do |f| %>
                    <div class="row">
                      <div class="col-md-4">
                        <div class="pull-right">
                          <p><%= match.home_team.team %></p>

                          <p>
                            <small><%= match.home_team.name %></small>
                          </p>
                        </div>
                      </div>
                      <div class="col-md-4 text-center">
                        <%= f.text_field :home_team_score, :class => "form-control score-field" %>
                        -
                        <%= f.text_field :away_team_score, :class => "form-control score-field" %>
                      </div>
                      <div class="col-md-4">
                        <div class="pull-left">
                          <p><%= match.away_team.team %></p>

                          <p>
                            <small><%= match.away_team.name %></small>
                          </p>
                        </div>
                      </div>
                    </div>
                <% end %>
              </div>
            </div>
          </div>
      <% end %>
    </div>
<% end %>
<section id="score_table">

</section>

<script>
    $(function () {
        getTournamentTable();
    });
    getTournamentTable = function () {
        $.ajax({
            url: "<%= get_score_board_tournament_path(@tournament) %>"
        }).done(function () {
            $(this).addClass("done");
        });
    }
</script>